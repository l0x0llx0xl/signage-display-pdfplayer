<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/compose_group"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/compose_left_frame_fake"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10">
    </FrameLayout>

    <FrameLayout
        android:id="@+id/compose_center_frame"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4">
        <LinearLayout
            android:id="@+id/compose_title_btn_group"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <FrameLayout
                android:id="@+id/compose_title_frame"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            </FrameLayout>

            <FrameLayout
                android:id="@+id/compose_btn_frame"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2">
                <LinearLayout
                    android:id="@+id/compose_btn_group"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top">
                    <Button
                        android:id="@+id/btn_new"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/newlist"
                        android:textColor="@drawable/selection_str_bg_white"
                        android:textSize="@dimen/compose_btn_text_size"
                        android:textStyle="bold"
                        android:background="@drawable/button_selection_blue_bg_black"
                        android:focusable="true"/>

                    <Button
                        android:id="@+id/btn_management"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/management"
                        android:textColor="@drawable/selection_str_bg_white"
                        android:textSize="@dimen/compose_btn_text_size"
                        android:textStyle="bold"
                        android:background="@drawable/button_selection_blue_bg_black"
                        android:layout_marginTop="25dp"
                        android:focusable="true"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/btn_compose_right_frame_fake"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </FrameLayout>
</LinearLayout>