<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">

    <LinearLayout
        android:id="@+id/sort_list_item_group"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/sort_list_item_icon"
            android:layout_width="0dp"
            android:layout_height="@dimen/compose_sort_edit_item_icon_image_size"
            android:layout_weight="1"
            android:focusable="false"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/sort_list_item_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textSize="@dimen/home_btn_text_size"
            android:textColor="@drawable/selection_str_bg_white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"

            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever" />

        <ImageView
            android:id="@+id/sort_list_item_move_icon"
            android:layout_width="0dp"
            android:layout_height="@dimen/compose_sort_edit_item_icon_image_size"
            android:layout_weight="1"
            android:focusable="false"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>

</LinearLayout>