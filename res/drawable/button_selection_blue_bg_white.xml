<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/blue3"
                android:centerColor="@color/blue3"
                android:endColor="@color/blue3"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#00000000" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
        <color android:color="@color/transparent"></color>
    </item>
    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/blue3"
                android:centerColor="@color/blue3"
                android:endColor="@color/blue3"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#00000000" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
        <color android:color="@color/transparent"></color>
    </item>
    <item android:state_enabled="true">
        <shape>
            <gradient
                android:startColor="@color/trans_white2"
                android:centerColor="@color/trans_white2"
                android:endColor="@color/trans_white2"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#00000000" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
        <color android:color="@color/transparent"></color>
    </item>
</selector>